env = Environment(CCFLAGS='-g')
env.ParseConfig('pkg-config --cflags --libs libcurl')

env.Program('test_read_cfg', ['test_read_cfg.cpp', 'read_cfg.cpp'])
env.Program('get_http', ['get_http.cpp', 'read_cfg.cpp'])
env.Program('test_jsoncpp.cpp', CPPPATH=['/usr/include/jsoncpp/'],  LIBS=['libjsoncpp'])
env.Program('detect', ['detect.cpp', 'read_cfg.cpp'])
env.Program('get_group_list', ['get_group_list.cpp', 'read_cfg.cpp'])
env.Program('get_person_info.cpp')
env.Program('get_face_info', ['get_face_info.cpp', 'read_cfg.cpp'])
env.Program('train_identify.cpp')
env.Program('rec_identify.cpp')
